<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4 mb-5 d-flex justify-content-center">
        <div class="card rounded_object-bottom" style="width: 18rem;">
          <img class="card-img-top rounded_object-top float-left" src="https://www.destinationcocktails.fr/wp-content/uploads/recipes/079_tropicalkamasutra.jpg" alt="Card image cap">
          <div class="card-body">
              <h5 class="card-title text-center mb-4"><%= cocktail.name %></h5>
              <p class="text-center"><%= link_to "More info", cocktail_path(cocktail), class: "btn-blue" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
