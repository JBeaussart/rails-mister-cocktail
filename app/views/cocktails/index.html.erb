<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4 mb-5 d-flex justify-content-center">
        <div class="card rounded_object-bottom" style="width: 18rem;">
          <% if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, height: 200, width: 150, crop: :fill, class: "card-img-top rounded_object-top float-left" %>
          <% end %>
          <div class="card-body">
              <h5 class="card-title text-center mb-4"><%= cocktail.name %></h5>
              <p class="text-center"><%= link_to "More info", cocktail_path(cocktail), class: "btn-blue" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
