<div class="container m-auto bg-white p-5">
    <h2><%= @cocktail.name %></h2>

      <div class="dose_ingredient mb-5 mt-5">
        <% if @cocktail.photo.attached? %>
          <%= cl_image_tag @cocktail.photo.key, height: 150, width: 150, crop: :fill, class: "card-img-top rounded_object-top float-left" %>
        <% end %>
        <h5>Ingredients</h5>
        <% @cocktail.doses.each do |dose| %>
          <%= "#{dose.description}cl - " %> <%= dose.ingredient.name %>
            <%= link_to dose_path(dose), method: :delete do %>
              <i class="fa fa-trash"></i>
            <% end %>
          <% end %>
      </div>
      <p class="mb-5">
        <%= link_to 'Add Doses', new_cocktail_dose_path(@cocktail), class: "btn-orange" %>
        <%= link_to 'Delete Cocktail', cocktail_path(@cocktail), method: :delete ,class: "btn-red" %>
      </p>
      <p><%= link_to 'Back Home', cocktails_path, class: "btn-blue" %></p>
</div>
