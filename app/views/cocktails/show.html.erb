<div class="container">
  <div class="row">
    <h2 class="m-auto"><%= @cocktail.name %></h2>
    <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
      <%= dose.description %> <%= dose.ingredient.name %>
      </li>
      <%= link_to 'Delete', dose_path(dose), method: :delete %>
    <% end %>
    </ul>
  </div>
  <%= link_to 'Add Doses', new_cocktail_dose_path(@cocktail), class: "btn btn-info" %>
  <%= link_to 'Back Home', cocktails_path, class: "btn btn-primary" %>
</div>