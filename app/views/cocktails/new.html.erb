<div class="container">
  <div class="row">
    <div class="col-6 m-auto">
    <h1 class="mb-5">Add a cocktail</h1>
      <%= simple_form_for [ @cocktail] do |f| %>
        <%= f.input :name %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
        <%= link_to "Cancel", cocktails_path, class: "btn btn-danger" %>
      <% end %> 
    </div>
  </div>
</div>